<odoo>
  <record id="view_attendance_advance_work_schedule_tree" model="ir.ui.view">
    <field name="name">attendance.advance.work.schedule.tree</field>
    <field name="model">attendance_advance.work_schedule</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="department_id"/>
      </list>
    </field>
  </record>

  <record id="view_attendance_advance_work_schedule_form" model="ir.ui.view">
    <field name="name">attendance.advance.work.schedule.form</field>
    <field name="model">attendance_advance.work_schedule</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="department_id"/>
            <field name="employee_ids" widget="many2many_tags"/>
          </group>
          <notebook>
            <page string="Schedule Lines">
              <field name="schedule_line_ids">
                <list editable="bottom">
                  <field name="day"/>
                  <field name="start_time"/>
                  <field name="end_time"/>
                  <field name="min_working_hours"/>
                  <field name="normal_working_hours"/>
                  <field name="pattern_type"/>
                </list>
              </field>
            </page>
            <page string="Excuse Policy">
              <group>
                <field name="grace_in_minutes"/>
                <field name="grace_out_minutes"/>
                <field name="min_late_entry_request"/>
                <field name="monthly_limit_requests"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_attendance_advance_work_schedule" model="ir.actions.act_window">
    <field name="name">Work Schedules</field>
    <field name="res_model">attendance_advance.work_schedule</field>
    <field name="view_mode">list,form</field>
  </record>


  <menuitem id="menu_attendance_advance_work_schedule" name="Work Schedules" parent="menu_attendance_advance_config" action="action_attendance_advance_work_schedule"/>

</odoo>
