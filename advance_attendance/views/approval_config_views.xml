<odoo>
  <record id="view_attendance_advance_approval_config_tree" model="ir.ui.view">
    <field name="name">attendance.advance.approval.config.tree</field>
    <field name="model">attendance_advance.approval_config</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="request_department_id"/>
        <field name="approver_department_id"/>
      </list>
    </field>
  </record>

  <record id="view_attendance_advance_approval_config_form" model="ir.ui.view">
    <field name="name">attendance.advance.approval.config.form</field>
    <field name="model">attendance_advance.approval_config</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="request_department_id"/>
            <field name="approver_department_id"/>
            <field name="approver_employee_ids" widget="many2many_tags"/>
            <field name="sequence"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_attendance_advance_approval_config" model="ir.actions.act_window">
    <field name="name">Approval Mapping</field>
    <field name="res_model">attendance_advance.approval_config</field>
    <field name="view_mode">list,form</field>
  </record>


    <menuitem id="menu_attendance_advance_approval_config" name="Approval Mapping" parent="menu_attendance_advance_config" action="action_attendance_advance_approval_config"/>
  
</odoo>