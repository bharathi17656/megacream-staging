<odoo>
  <record id="view_auto_allocation_config_tree" model="ir.ui.view">
    <field name="name">auto.allocation.config.tree</field>
    <field name="model">attendance_advance.auto_allocation_config</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="timeoff_type_id"/>
        <field name="days_allocated"/>
        <field name="allocation_mode"/>
        <field name="is_active"/>
      </list>
    </field>
  </record>

  <record id="view_auto_allocation_config_form" model="ir.ui.view">
    <field name="name">auto.allocation.config.form</field>
    <field name="model">attendance_advance.auto_allocation_config</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_run_allocation" string="Run Auto Allocation" type="object" class="btn-primary"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="timeoff_type_id"/>
            <field name="days_allocated"/>
            <field name="allocation_mode"/>
            <field name="prorate_by_join_date"/>
            <field name="carry_forward"/>
            <field name="is_active"/>
          </group>
          <group>
            <field name="allocation_reason"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_auto_allocation_config" model="ir.actions.act_window">
    <field name="name">Auto Time Off Allocation</field>
    <field name="res_model">attendance_advance.auto_allocation_config</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_auto_allocation_root"
            name="Auto Allocation"
            parent="menu_attendance_advance_root"
            action="action_auto_allocation_config"
            sequence="30"/>
</odoo>
