<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="attendance_advance_approval_request_view_tree" model="ir.ui.view">
        <field name="name">attendance_advance.approval_request.view.tree</field>
        <field name="model">attendance_advance.approval_request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="department_id"/>
                <field name="leave_id" groups="hr_holidays.group_hr_holidays_manager,base.group_system"/>
                <field name="approver_employee_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="attendance_advance_approval_request_view_form" model="ir.ui.view">
        <field name="name">attendance_advance.approval_request.view.form</field>
        <field name="model">attendance_advance.approval_request</field>
        <field name="arch" type="xml">
            <form string="Approval Request">
                <header>
                    <button name="action_open_leave" type="object" string="View Leave" class="btn-primary"/>
                    <field name="status" widget="statusbar" statusbar_visible="pending,approved,refused"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="leave_id" readonly="1"/>
                        <field name="department_id" readonly="1"/>
                        <field name="approver_employee_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance_advance_approval_request" model="ir.actions.act_window">
        <field name="name">Per-Approver Requests</field>
        <field name="res_model">attendance_advance.approval_request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_attendance_advance_approval_request" name="Per-Approver Requests" parent="menu_attendance_advance_operations" action="action_attendance_advance_approval_request" sequence="31"/>
</odoo>
