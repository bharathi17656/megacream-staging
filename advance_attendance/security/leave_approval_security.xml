<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="rule_attendance_advance_leave_approval_own" model="ir.rule">
        <field name="name">Attendance Advance Leave Approval - Own</field>
        <field name="model_id" ref="model_attendance_advance_leave_approval"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">['|', ('approver_user_ids', 'in', [user.id]), ('leave_id.employee_id.user_id', '=', user.id)]</field>
        <field name="global" eval="False"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- HR Managers can see all approval records -->
    <record id="rule_attendance_advance_leave_approval_manager_all" model="ir.rule">
        <field name="name">Attendance Advance Leave Approval - Manager All</field>
        <field name="model_id" ref="model_attendance_advance_leave_approval"/>
        <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- System administrators can see all approval records -->
    <record id="rule_attendance_advance_leave_approval_admin_all" model="ir.rule">
        <field name="name">Attendance Advance Leave Approval - Admin All</field>
        <field name="model_id" ref="model_attendance_advance_leave_approval"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Approvers can read the linked time off even if they are not the owner -->
        <record id="rule_hr_leave_read_for_approvers" model="ir.rule">
            <field name="name">Time Off - Approver Read</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[("aa_approver_user_ids", "in", [user.id])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
</odoo>
