<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Approver can read/write own request -->
    <record id="rule_attendance_advance_approval_request_own" model="ir.rule">
        <field name="name">Approval Request - Approver Own</field>
        <field name="model_id" ref="model_attendance_advance_approval_request"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">['|', ('approver_user_id', '=', user.id), ('leave_id.employee_id.user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- HR Managers see all -->
    <record id="rule_attendance_advance_approval_request_manager_all" model="ir.rule">
        <field name="name">Approval Request - Manager All</field>
        <field name="model_id" ref="model_attendance_advance_approval_request"/>
        <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Admins see all -->
    <record id="rule_attendance_advance_approval_request_admin_all" model="ir.rule">
        <field name="name">Approval Request - Admin All</field>
        <field name="model_id" ref="model_attendance_advance_approval_request"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
