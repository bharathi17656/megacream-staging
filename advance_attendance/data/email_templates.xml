<odoo>
  <data noupdate="1">
    <record id="email_template_late_entry_alert_employee" model="mail.template">
      <field name="name">Late Entry Alert (Employee)</field>
      <field name="email_from">${(user.email or '')}</field>
      <field name="subject">Late entry detected for ${object.employee_id.name}</field>
      <field name="model_id" ref="model_attendance_advance_late_entry"/>
      <field name="body_html"><![CDATA[
        <p>Dear ${object.employee_id.name},</p>
        <p>A late entry has been recorded for <strong>${object.date}</strong> with <strong>${object.minutes_late}</strong> minutes late. Please request approval if you believe this is incorrect.</p>
      ]]></field>
    </record>

    <record id="email_template_late_entry_request_approver" model="mail.template">
      <field name="name">Late Entry Approval Request (Approver)</field>
      <field name="email_from">${(user.email or '')}</field>
      <field name="subject">Late entry approval requested for ${object.employee_id.name}</field>
      <field name="model_id" ref="model_attendance_advance_late_entry"/>
      <field name="body_html"><![CDATA[
        <p>Dear Approver,</p>
        <p>An approval request has been submitted for ${object.employee_id.name} on ${object.date}.</p>
        <p>Please review and take action.</p>
      ]]></field>
    </record>
  </data>
</odoo>