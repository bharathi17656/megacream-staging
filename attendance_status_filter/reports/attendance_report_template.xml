<odoo>
    <template id="attendance_daily_template">

        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <main>
                    <div class="page">

                        <h2 style="text-align:center;">
                            Daily Attendance Report
                        </h2>
                        <p style="text-align:center;">
                            From
                            <t t-esc="docs and context_timestamp(docs[0].check_in).strftime('%B %d %Y')"/>
                            To
                            <t t-esc="docs and context_timestamp(docs[-1].check_in).strftime('%B %d %Y')"/>
                        </p>

                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th style="text-align:center;">No</th>
                                    <th style="text-align:center;">Employee ID</th>
                                    <th style="text-align:center;">First Name</th>
                                    <th style="text-align:center;">Date</th>
                                    <th style="text-align:center;">Timetable</th>
                                    <th style="text-align:center;">Clock In</th>
                                    <th style="text-align:center;">Clock Out</th>
                                    <th style="text-align:center;">Status</th>
                                </tr>
                            </thead>
                            <tbody style="text-align:center;">
                                <t t-set="count" t-value="1"/>
                                <t t-foreach="docs" t-as="rec">

                                    <tr style="text-align:center;">

                                        <td>
                                            <t t-esc="count"/>
                                        </td>
                                        <td>
                                            <t t-esc="rec.employee_id.x_studio_emp_id or ''"/>
                                        </td>
                                        <td>
                                            <t t-esc="rec.employee_id.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="context_timestamp(rec.check_in).strftime('%d-%m-%Y') if rec.check_in else ''"/>
                                        </td>
                                        <td>
                                            <t t-esc="rec.employee_id.job_title"/>
                                        </td>
                                        <td>
                                            <t t-esc="context_timestamp(rec.check_in).strftime('%H:%M') if rec.check_in else ''"/>
                                        </td>

                                        <td>
                                            <t t-esc="context_timestamp(rec.check_out).strftime('%H:%M') if rec.check_out else ''"/>
                                        </td>
                                        <td style="text-align:center;">

                                            <t t-if="rec.status == 'present'">
                                                Present(P)
                                            </t>

                                            <t t-elif="rec.status == 'miss_out'">
                                                Miss In(MI)
                                            </t>

                                            <t t-elif="rec.status == 'late'">
                                                Late(LT)
                                            </t>

                                            <t t-elif="rec.status == 'absent'">
                                                Absence(A)
                                            </t>

                                            <t t-else="">
                                                -
                                            </t>

                                        </td>

                                    </tr>

                                    <t t-set="count" t-value="count + 1"/>
                                </t>
                            </tbody>
                        </table>

                    </div>
                </main>
            </t>
        </t>

    </template>
</odoo>