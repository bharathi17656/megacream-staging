<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="monthly_attendance_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <main>
                    <div class="page">
                        <!-- TITLE -->
                        <h2 style="text-align:center;">
                            Monthly Attendance Status
                        </h2>

                        <!-- DATE RANGE -->
                        <p style="text-align:center;">
                            From
                            <t t-esc="data['date_from']"/>
                            To
                            <t t-esc="data['date_to']"/>
                        </p>

                        <!-- HEADER ROW 1 (Company | Generated on) -->
                        <table class="table table-borderless"
                               style="width:100%; font-size:18px; border:0 !important; border-collapse:collapse;">
                            <tr>
                                <td style="text-align:left; width:33%; border:0 !important;">
                                    <strong style="color:#000000;">
                                        Company:
                                    </strong>
                                    <t t-esc="env.company.name"/>
                                </td>
                                <td style="width:34%; border:0 !important;"> </td>
                                <td style="text-align:right; width:33%; border:0 !important;">
                                    <strong style="color:#000000;">
                                        Generated on:
                                    </strong>
                                    <t t-esc="generated_on"/>
                                </td>
                            </tr>
                        </table>
                        <!-- HEADER ROW 2 (Employee Info | Attendance) -->
                        <table class="table table-borderless"
                               style="width:100%; font-size:18px; margin-top:2px; border:0 !important; border-collapse:collapse;">
                            <tr>
                                <td style="text-align:left; width:33%; padding-left:16px; border:0 !important;">
                                    <strong style="color:#000000;">
                                        Employee Information
                                    </strong>
                                </td>
                                <td style="text-align:center; width:34%; border:0 !important;">
                                    <strong style="color:#000000;">
                                        Attendance
                                    </strong>
                                </td>

                                <td style="width:33%; border:0 !important;"> </td>
                            </tr>
                        </table>

                        <table class="table table-borderless" style="width:100%; font-size:18px; border-collapse:collapse; text-align:center;">
                            <thead>
                                <tr>
                                    <th rowspan="2">Sl No</th>
                                    <th rowspan="2">Employee</th>

                                    <t t-foreach="data['days']" t-as="d">
                                        <th>
                                            <t t-esc="d['day']"/>
                                        </th>
                                    </t>
                                </tr>
                                <tr>
                                    <t t-foreach="data['days']" t-as="d">
                                        <th>
                                            <t t-esc="d['date']"/>
                                        </th>
                                    </t>
                                </tr>
                            </thead>

                            <tbody>
                                <t t-foreach="data['records']" t-as="rec">
                                    <tr style="height:18px;">
                                        <td>
                                            <t t-esc="rec['sl_no']"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <t t-esc="rec['name']"/>
                                        </td>

                                        <t t-foreach="rec['attendance']" t-as="st">
                                            <td style="font-weight:bold;">
                                                <span t-if="st == 'P'" style="color:#00c853;">P</span>
                                                <span t-if="st == 'A'" style="color:#d50000;">A</span>
                                                <span t-if="st == 'LT'" style="color:#000000;">LT</span>
                                                <span t-if="st == 'MI'" style="color:#000000;">MI</span>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </div>
                </main>
            </t>
        </t>
    </template>

</odoo>


