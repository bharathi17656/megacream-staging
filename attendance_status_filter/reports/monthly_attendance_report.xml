<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- CREATE PAPERFORMAT FIRST -->
    <record id="paperformat_monthly_attendance_a3"
            model="report.paperformat">
        <field name="name">Monthly Attendance A3</field>
        <field name="default" eval="False"/>
        <field name="format">A3</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">90</field>
    </record>

    <!-- THEN USE IT -->
    <record id="action_attendance_monthly_report"
            model="ir.actions.report">
        <field name="name">Monthly Attendance Report</field>
        <field name="model">monthly.attendance.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">attendance_status_filter.monthly_attendance_template</field>
        <field name="report_file">attendance_status_filter.monthly_attendance_template</field>
        <field name="paperformat_id"
               ref="paperformat_monthly_attendance_a3"/>
    </record>

</odoo>