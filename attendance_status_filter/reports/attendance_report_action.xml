<odoo>
    <!-- CREATE PAPERFORMAT FIRST -->
    <record id="paperformat_daily_attendance_a4"
            model="report.paperformat">
        <field name="name">Daily Attendance A4</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_attendance_daily_report" model="ir.actions.report">
        <field name="name">Attendance Daily Report</field>
        <field name="model">attendance.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">attendance_status_filter.attendance_daily_report_template</field>
        <field name="report_file">attendance_status_filter.attendance_daily_report_template</field>
        <field name="paperformat_id"
               ref="paperformat_daily_attendance_a4"/>
    </record>
</odoo>

