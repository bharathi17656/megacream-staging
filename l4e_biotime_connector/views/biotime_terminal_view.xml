<odoo>

    <!-- ACTION -->
    <record id="action_biotime_terminal" model="ir.actions.act_window">
        <field name="name">Biotime Terminals</field>
        <field name="res_model">biotime.terminal</field>
        <field name="view_mode">list,form</field> 
    </record>

    <!-- TREE -->
    <record id="view_biotime_terminal_tree" model="ir.ui.view">
        <field name="name">biotime.terminal.tree</field>
        <field name="model">biotime.terminal</field>
        <field name="arch" type="xml">
            <list>
                <field name="terminal_name"/>
                <field name="sn"/>
                <field name="ip_address"/>
                <field name="alias"/>
                <field name="state"/>
                <field name="last_activity"/>
                <field name="user_count"/>
                <field name="transaction_count"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_biotime_terminal_form" model="ir.ui.view">
        <field name="name">biotime.terminal.form</field>
        <field name="model">biotime.terminal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="terminal_name"/>
                            <field name="sn"/>
                            <field name="ip_address"/>
                            <field name="alias"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="fw_ver"/>
                            <field name="push_ver"/>
                            <field name="terminal_tz"/>
                            <field name="is_attendance"/>
                        </group>
                    </group>

                    <group string="Statistics">
                        <field name="user_count"/>
                        <field name="fp_count"/>
                        <field name="face_count"/>
                        <field name="transaction_count"/>
                    </group>

                    <group string="Other Info">
                        <field name="last_activity"/>
                        <field name="push_time"/>
                        <field name="transfer_time"/>
                        <field name="area_name"/>
                        <field name="company_uid"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
